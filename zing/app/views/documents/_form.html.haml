= form_for(@document) do |f|
  - if @document.errors.any?
    #error_explanation
      %h2
        = pluralize(@document.errors.count, "error")
        prohibited this document from being saved:
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.file_field :file
    %br

    = label :time_available, 'Time Available'
    = f.select :time_available, options_for_select( [  ['10', 10], ['15', 15], ['30', 30] ] )
    %br

    = label :password, 'Password (optional)'
    = f.text_field :password
    %br

  .actions
    = f.submit value: 'Upload', data: {disable_with: 'Uploading...'}, class: 'btn btn-primary'
